# Server Configuration
NODE_ENV=development
PORT=5000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=30d

# MongoDB Configuration
MONGODB_URI=mongodb://127.0.0.1:27017/farmchain

# IPFS Configuration (Pinata)
# Get these from https://pinata.cloud/keys
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_API_KEY=your-pinata-secret-key

# Google AI Configuration
# Get this from https://ai.google.dev/
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX=100 # requests per window per IP

# File Uploads
MAX_FILE_SIZE=10485760 # 10MB in bytes
UPLOAD_DIR=./uploads

# Email Configuration (for future use)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=FarmChain <noreply@farmchain.app>

# Admin Configuration (for initial setup)
ADMIN_EMAIL=admin@farmchain.app
ADMIN_PASSWORD=ChangeThisPassword123!

# Fast2SMS Configuration
FAST2SMS_API_KEY=3IU2Jq4ZXMyC6PLvderiDoKjNtsbRx015gpkBh8fa7lAQmcw9zaK0HAsfQ74dCZmTGSXWxU3tlz9EhFr
SMS_SENDER_ID=FARMCH
